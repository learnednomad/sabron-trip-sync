{
"$schema": "https://turbo.build/schema.json",
"globalDependencies": ["**/.env.*local", "**/.env", "tsconfig.json"],
"globalEnv": [
"NODE_ENV",
"VERCEL_URL",
"PORT",
"ANALYZE",
"SENTRY_DSN",
"NEXT_PUBLIC_SENTRY_DSN",
"EXPO_PUBLIC_SENTRY_DSN",
"SUPABASE_URL",
"SUPABASE_ANON_KEY",
"SUPABASE_SERVICE_KEY",
"REDIS_URL",
"MONGODB_URI",
"ALLOWED_ORIGINS",
"NEXT_PUBLIC_API_URL",
"EXPO_PUBLIC_API_URL"
],
"remoteCache": {
"signature": true
},
"tasks": {
"build": {
"dependsOn": ["^build"],
"outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"],
"env": [
"NODE_ENV",
"NEXT_PUBLIC_*",
"EXPO_PUBLIC_*",
"SENTRY_*"
],
"passThroughEnv": ["CI", "VERCEL"]
},
"dev": {
"cache": false,
"persistent": true,
"dependsOn": ["^build"]
},
"test": {
"outputs": ["coverage/**"],
"dependsOn": ["^build"],
"env": ["NODE_ENV"],
"inputs": ["src/**/*.{js,jsx,ts,tsx}", "test/**/*", "jest.config.*", "vitest.config.*"]
},
"test:watch": {
"cache": false,
"persistent": true
},
"test:ci": {
"outputs": ["coverage/**"],
"dependsOn": ["^build"],
"env": ["NODE_ENV", "CI"],
"inputs": ["src/**/*.{js,jsx,ts,tsx}", "test/**/*", "jest.config.*", "vitest.config.*"]
},
"test:e2e": {
"outputs": ["playwright-report/**", "test-results/**"],
"dependsOn": ["build"],
"env": ["NODE_ENV", "CI", "PLAYWRIGHT_*"]
},
"lint": {
"outputs": [],
"dependsOn": ["^build"],
"inputs": ["src/**/*.{js,jsx,ts,tsx}", ".eslintrc.*", "eslint.config.*"]
},
"lint:fix": {
"outputs": [],
"dependsOn": ["^build"],
"inputs": ["src/**/*.{js,jsx,ts,tsx}", ".eslintrc.*", "eslint.config.*"]
},
"typecheck": {
"outputs": ["*.tsbuildinfo"],
"dependsOn": ["^build"],
"inputs": ["src/**/*.{ts,tsx}", "tsconfig.json", "**/*.d.ts"]
},
"clean": {
"cache": false
},
"@sabron/database#build": {
"dependsOn": ["^build"]
},
"@sabron/api#build": {
"dependsOn": ["^build"]
},
"@sabron/api#dev": {
"dependsOn": ["^build"],
"cache": false,
"persistent": true
},
"db:seed": {
"cache": false
},
"analyze": {
"dependsOn": ["build"],
"env": ["ANALYZE"]
},
"storybook": {
"cache": false,
"persistent": true,
"dependsOn": ["^build"]
},
"build-storybook": {
"outputs": ["storybook-static/**"],
"dependsOn": ["^build"]
}
}
}
