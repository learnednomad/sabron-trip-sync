# =============================================================================
# SABRON TRIP SYNC - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# This file can be safely committed to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/sabron_trip_sync"
REDIS_URL="redis://localhost:6379"
MONGODB_URI="mongodb://localhost:27017/sabron_trip_sync"

# =============================================================================
# SUPABASE AUTHENTICATION
# =============================================================================
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-role-key"

# =============================================================================
# API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL="http://localhost:3000"
EXPO_PUBLIC_API_URL="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3001,http://localhost:3000"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV="development"
PORT="3000"

# =============================================================================
# ERROR TRACKING (SENTRY) - OPTIONAL
# =============================================================================
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
EXPO_PUBLIC_SENTRY_DSN=""

# =============================================================================
# DEVELOPMENT TOOLS - OPTIONAL
# =============================================================================
ANALYZE="false"
VERCEL_URL=""