{
  "name": "@sabron/api",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "pnpm build:deps && tsx watch src/index.ts",
    "build": "tsup",
    "build:deps": "pnpm --filter @sabron/types --filter @sabron/validation --filter @sabron/database build",
    "start": "node dist/index.js",
    "clean": "rm -rf dist .turbo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "db:seed": "tsx src/seed.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.9",
    "@hono/zod-validator": "^0.5.0",
    "@sabron/database": "workspace:*",
    "@sabron/types": "workspace:*",
    "@sabron/validation": "workspace:*",
    "@sentry/node": "^8.48.0",
    "@supabase/supabase-js": "^2.47.22",
    "hono": "^4.8.4",
    "mongodb": "^6.8.0",
    "openapi3-ts": "^4.2.1",
    "redis": "^4.7.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@sabron/eslint-config": "workspace:*",
    "@sabron/typescript-config": "workspace:*",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.30.1",
    "tsup": "^8.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
